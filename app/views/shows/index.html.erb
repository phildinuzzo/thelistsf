    <tbody>
      <% @shows.each do |show| %>
      <% a = show.date %>
      <% if a == nil %>
      <% else %>
      <% b = Date.parse(a).strftime('%a, %b %d') %>
      <% c = Date.parse(b) %>
        <% if c < Date.today %>
        <% else %>

          <% if show.cancelled == true %>
            <tr class="cancelled">
              <td class="date"><%= show.date %></td>
              <td class="bands"><%= show.bands %></td>
              <td class="venue"><%= show.venue %></td>
              <td class="time"></td>
              <td></td>
              <td class="price"></td>
              <td class="boolean">
              </td>
              <td class="notes"><%= show.notes %></td>
              <td class="rec"></td>
              <td class="empty"></td>

            </tr>
          <% else %>
            <tr>
              <td class="date"><%= show.date %></td>
              <td class="bands"><%= show.bands %></td>
              <td class="venue"><%= show.venue %></td>
              <td class="time"><%= show.time %></td>
              <td class="ages"><%= show.ages %></td>
              <td class="price"><%= show.price %></td>

              <td class="boolean">
              <% if show.pit != false %>
                Pit warning!
              <% else %>
              <% end %>
              <% if show.inout != false %>
                No in/out!
              <% else %>
              <% end %>
              <% if show.sellout != false %>
                Likely sell-out!
              <% else %>
              <% end %>
              <% if show.soldout != false %>
                SOLDOUT!
              <% else %>
              <% end %>
            </td>
            <td class="notes"><%= show.notes %></td>
            <td class="rec"><%= show.rec %></td>

            <td class="save">
              <% if user_signed_in? %>

              <%= link_to 'Save', {:controller => "shows",
                       :action => "save_show",
                       :user_id => current_user.id,
                       :show_id => show.id},
                       :method => "post" %></td>
              <% else %>
              <% end %>
            <td class="empty"></td>
          </tr>
        <% end %>
        <% end %>
      <% end %>

<!--       <td class="c1">
      <td class="c2">
      </td>
      <td class="c3"> -->

      <% end %>
    </tbody>
   </table>
